<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_background</item>
        <item name="colorPrimaryDark">@color/brand_top_color</item>
        <item name="colorAccent">@color/brand_accent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:actionMenuTextColor">@color/brand_background</item>
        <item name="actionMenuTextColor">@color/brand_background</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MenuTextStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MenuTextStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/brand_background</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MenuTextStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MenuTextStyle</item>
    </style>

    <style name="VoteTheme" parent="AppTheme">
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MenuTextStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MenuTextStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WalletTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorAccent">@color/brand_background</item>
        <item name="android:textColorHint">@color/brand_background</item>
    </style>

    <style name="OpenSourceTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

</resources>
